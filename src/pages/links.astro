---
import { Image } from "astro:assets"
import { Icon } from "astro-icon/components"

import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts"
---

<!doctype html>
<html lang="pt">
  <head>
    <BaseHead title={`${SITE_TITLE} | Links`} description={SITE_DESCRIPTION} />
    <style>
      .header-links {
        display: flex;
        align-items: center;
        gap: 0.5em;
      }
      .header-links__avatar {
        border-radius: 100%;
      }
      .header-links__text {
        display: flex;
        flex-direction: column;
        gap: 0;
      }
      .header-links__text-title {
        font-weight: 500;
        font-size: 13px;
        padding: 0;
      }
      .header-links__text-subtitle {
        font-weight: 500;
        font-size: 11px;
        padding: 0;
      }
      .header-buttons {
        display: flex;
        flex-direction: column;
        width: 100%;
        gap: 2em;
        margin: 2em 0 2.5em;
      }
      .header-buttons__item {
        display: flex;
        align-items: center;
        justify-content: center;
        wrap: wrap;
        gap: 0.3em;
        background: var(--white-secondary);
        min-height: 60px;
        box-shadow: 0 2px 10px rgba(var(--gray), 25%);
        text-decoration: none;
        border-radius: 0.5em;
        color: var(--black-primary);
      }
      .header-buttons__item--purple {
        background: var(--purple-brand);
        color: var(--white-primary);
      }
      .header-buttons__item--green {
        background: var(--green-brand);
      }
      .header-buttons__item--red {
        background: #ff0000;
        color: var(--white-primary);
      }
      .header-buttons__item--black {
        background: var(--white-primary);
        color: var(--black-secondary);
      }
    </style>
  </head>

  <body>
    <Header />
    <main transition:animate="slide">
      <div class="header-links">
        <Image
          class:list="header-links__avatar"
          src="/eder-christian-default-profile.jpg"
          alt="Eder Christian"
          width="38"
          height="38"
        />
        <div class="header-links__text">
          <span class="header-links__text-title">@ederchristian</span>
          <span class="header-links__text-subtitle">Eder Christian</span>
        </div>
      </div>

      <div class="header-buttons">
        <a
          class="header-buttons__item header-buttons__item--red"
          href="https://www.youtube.com/@ederchristian?sub_confirmation=1"
          target="_blank"
          rel="noopener noreferrer"
        >
          Se inscreva no meu canal do YouTube

          <Icon name="mdi:youtube" size={28} />
        </a>
        <a
          class="header-buttons__item header-buttons__item--black"
          href="https://ederchristian.substack.com/"
          target="_blank"
          rel="noopener noreferrer"
        >
          Newsletter Gratuita
          <Icon name="mdi:email" size={24} />
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>
