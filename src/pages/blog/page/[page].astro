---
import { getCollection } from "astro:content"

import BaseHead from "../../../components/BaseHead.astro"
import Header from "../../../components/Header.astro"
import Footer from "../../../components/Footer.astro"
import FormattedDatePT from "../../../components/FormattedDatePT.astro"
import FormattedDateUS from "../../../components/FormattedDateUS.astro"

import { SITE_TITLE, SITE_DESCRIPTION } from "../../../consts"

const POSTS_PER_PAGE = 12

export async function getStaticPaths() {
  const posts = await getCollection("blog")
  const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE)

  return Array.from({ length: totalPages }).map((_, i) => ({
    params: { page: String(i + 1) },
  }))
}

const { page } = Astro.params
const currentPage = parseInt(page)
const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.date.valueOf() - b.data.date.valueOf()
)
const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE)
const start = (currentPage - 1) * POSTS_PER_PAGE
const end = start + POSTS_PER_PAGE
const paginatedPosts = posts.reverse().slice(start, end)
---

<!doctype html>
<html>
  <head>
    <BaseHead
      title={`Blog â€” Page ${currentPage} | ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      main {
        width: 720px;
        margin: 0 auto;
        padding-top: 2rem;
      }
      ul {
        display: flex;
        flex-direction: column;
        gap: 0;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      .blog-post-link {
        text-decoration: none;
        color: inherit;
        display: block;
      }
      .blog-post {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--black-primary);
        border-radius: 18px;
        box-shadow: 0 2px 12px 0 rgba(var(--gray), 0.04);
        margin-bottom: 1.5rem;
        padding: 1.5rem;
        transition: all 0.2s;
        position: relative;
        overflow: hidden;
      }
      .blog-post:not(:last-child)::after {
        content: "";
        display: block;
        position: absolute;
        left: 1.5rem;
        right: 1.5rem;
        bottom: -0.75rem;
        height: 1px;
        background: linear-gradient(
          to right,
          transparent,
          var(--black-primary) 40%,
          transparent 100%
        );
        opacity: 0.08;
      }
      .blog-post-link:hover .blog-post {
        box-shadow: 0 6px 32px 0 rgba(var(--gray), 0.1);
        background: rgba(255, 255, 255, 0.04);
        transform: translateY(-2px) scale(1.012);
        border-color: var(--green-brand);
      }
      .title--blog {
        font-size: 1.18rem;
        font-weight: 600;
        letter-spacing: -0.01em;
        color: var(--white-primary);
        margin: 0;
        line-height: 1.3;
      }
      .date-blog {
        font-size: 1rem;
        color: var(--white-secondary);
        margin: 0;
        letter-spacing: 0.01em;
      }
      .pagination {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
      }
      .pagination-btn {
        display: inline-flex;
        align-items: center;
        font-size: 0.88rem;
        padding: 0.3em 0.8em;
        border-radius: 6px;
        background: transparent;
        color: var(--green-brand);
        border: 1px solid var(--green-brand);
        text-decoration: none;
        transition:
          background 0.15s,
          color 0.15s;
        cursor: pointer;
        gap: 0.2em;
      }
      .pagination-btn[disabled],
      .pagination-btn.disabled {
        opacity: 0.5;
        pointer-events: none;
        cursor: default;
      }
      .pagination-btn:hover {
        background: var(--green-brand);
        color: var(--black-background);
      }
      .pagination-btn:hover svg path {
        stroke: var(--black-background);
      }
      @media (max-width: 720px) {
        main {
          width: 100%;
          padding: 0 0.5rem;
        }
        .blog-post {
          padding: 1.2rem 1rem;
        }
        .blog-post:not(:last-child)::after {
          left: 1rem;
          right: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main transition:animate="slide">
      <section>
        <ul>
          {
            paginatedPosts.map(post => (
              <a class="blog-post-link" href={`/blog/${post.slug}/`}>
                <li class="blog-post">
                  <div class="container-blog">
                    <h4 class="title title--blog">{post.data.title}</h4>
                  </div>
                  <div class="container-blog">
                    <p class="date-blog">
                      {post.data.language === "en-US" ? (
                        <FormattedDateUS date={post.data.date} />
                      ) : (
                        <FormattedDatePT date={post.data.date} />
                      )}
                    </p>
                  </div>
                </li>
              </a>
            ))
          }
        </ul>
        <div class="pagination">
          {
            currentPage > 1 ? (
              <a
                href={
                  currentPage === 2
                    ? "/blog/"
                    : `/blog/page/${currentPage - 1}/`
                }
                class="pagination-btn"
              >
                <svg
                  width="16"
                  height="16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  style="margin-right:4px;vertical-align:middle;"
                >
                  <path
                    d="M10 4l-4 4 4 4"
                    stroke="var(--green-brand)"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                Previous
              </a>
            ) : (
              <span class="pagination-btn disabled" aria-disabled="true">
                <svg
                  width="16"
                  height="16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  style="margin-right:4px;vertical-align:middle;"
                >
                  <path
                    d="M10 4l-4 4 4 4"
                    stroke="var(--green-brand)"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                Previous
              </span>
            )
          }
          {
            currentPage < totalPages ? (
              <a href={`/blog/page/${currentPage + 1}/`} class="pagination-btn">
                Next
                <svg
                  width="16"
                  height="16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  style="margin-left:4px;vertical-align:middle;"
                >
                  <path
                    d="M6 4l4 4-4 4"
                    stroke="var(--green-brand)"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
            ) : null
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
