      }
      .formkit-form[data-uid="4e55a7840f"] .formkit-spinner {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        height: 0px;
        width: 0px;
        margin: 0 auto;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 0px;
        overflow: hidden;
