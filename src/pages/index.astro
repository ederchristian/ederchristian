        ~ span {
        opacity: 0;
      }
      .formkit-form[data-uid="4e55a7840f"]
        .formkit-powered-by[data-active="false"] {
        opacity: 0.35;
      }

      @-webkit-keyframes formkit-bouncedelay-formkit-form-data-uid-4e55a7840f- {
        0%,
        80%,
        100% {
          -webkit-transform: scale(0);
          -ms-transform: scale(0);
          transform: scale(0);
        }
        40% {
          -webkit-transform: scale(1);
          -ms-transform: scale(1);
          transform: scale(1);
        }
      }
      @keyframes formkit-bouncedelay-formkit-form-data-uid-4e55a7840f- {
        0%,
        80%,
        100% {
          -webkit-transform: scale(0);
          -ms-transform: scale(0);
          transform: scale(0);
        }
        40% {
          -webkit-transform: scale(1);
          -ms-transform: scale(1);
          transform: scale(1);
        }
      }
      .formkit-form[data-uid="4e55a7840f"] blockquote {
        padding: 10px 20px;
        margin: 0 0 20px;
