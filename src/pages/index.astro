        cursor: pointer;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]:last-of-type {
        margin-bottom: 0;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        input[type="checkbox"] {
        display: none;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        input[type="checkbox"]
        + label::after {
        content: none;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        input[type="checkbox"]:checked
        + label::after {
        border-color: #ffffff;
        content: "";
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        input[type="checkbox"]:checked
        + label::before {
        background: #10bf7a;
        border-color: #10bf7a;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        label {
        position: relative;
        display: inline-block;
        padding-left: 28px;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        label::before,
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
