      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        label::before {
        height: 16px;
        width: 16px;
        border: 1px solid #e3e3e3;
        background: #ffffff;
        left: 0px;
        top: 3px;
      }
      .formkit-form[data-uid="4e55a7840f"]
        [data-group="checkboxes"]
        [data-group="checkbox"]
        label::after {
        height: 4px;
        width: 8px;
        border-left: 2px solid #4d4d4d;
        border-bottom: 2px solid #4d4d4d;
        -webkit-transform: rotate(-45deg);
        -ms-transform: rotate(-45deg);
        transform: rotate(-45deg);
        left: 4px;
        top: 8px;
      }
      .formkit-form[data-uid="4e55a7840f"] .formkit-alert {
        background: #f9fafb;
        border: 1px solid #e3e3e3;
        border-radius: 5px;
        -webkit-flex: 1 0 auto;
        -ms-flex: 1 0 auto;
        flex: 1 0 auto;
        list-style: none;
        margin: 25px auto;
        padding: 12px;
        text-align: center;
        width: 100%;
      }
      .formkit-form[data-uid="4e55a7840f"] .formkit-alert:empty {
        display: none;
      }
      .formkit-form[data-uid="4e55a7840f"] .formkit-alert-success {
        background: #d3fbeb;
        border-color: #10bf7a;
        color: #0c905c;
      }
      .formkit-form[data-uid="4e55a7840f"] .formkit-alert-error {
        background: #fde8e2;
        border-color: #f2643b;
